<%- include("partials/header"); -%>

<h1>Home</h1>
<p><%= homeStartingContent %></p>

<% posts.forEach(function(post) { %>
    <% const truncPostBody = post.body.substring(0, 100) + " ..." %>

<div>
    <h1><%= post.title %></h1>
    <p><%= truncPostBody %><a href="/posts/<%= post.title %>">Read More</a></p>
</div>

<% }); %> 

<%- include("partials/footer"); -%>
